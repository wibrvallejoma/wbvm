                            {/* Email Contact */}
                            <div class="mt-4">
                                <p class="text-lg text-slate-600 mb-4">Or reach me directly at <a href="mailto:wibrvallejoma@gmail.com" 
                                   class="text-teal-400 hover:text-teal-300 font-medium text-xl">
                                    wibrvalejoma@gmail.com
                                </a>
                                </p>
                            </div>
                        </div>
                    </p>
                </div>

            </div>

        </div>
    </section>
</Layout>

<style>
    .rainbow-text span {
        animation: 
            color-cycle 4s infinite,
            wave 0.5s ease-in-out infinite paused;
        animation-delay: calc(0.2s * var(--i));
        display: inline-block;
    }
    
    .rainbow-text:hover span {
        animation-play-state: running;
    }

    @keyframes wave {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-8px); }
    }

    @keyframes color-cycle {
        0% { color: #ff6b6b; }
        15% { color: #4ecdc4; }
        30% { color: #45b7d1; }
        45% { color: #96ceb4; }
        60% { color: #ffda79; }
        75% { color: #ff9f43; }
        90% { color: #a55eea; }
        100% { color: #ff6b6b; }
    }
</style>
