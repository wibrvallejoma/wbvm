---
import Layout from '../layouts/Layout.astro';
import Avatar from '../images/avatar_2.png';
import { Image } from 'astro:assets';

const title = "Contact William BV";
const description = "Get in touch with William BV for collaboration opportunities";
---

<Layout title={title} description={description}>
    <section class="container mx-auto px-4 py-20 flex">
        <div class="max-w-4xl bg-white rounded-xl p-8 drop-shadow-xl mx-auto">
            <h1 class="text-4xl font-bold mb-12">Let's create something
                <span class="rainbow-text">
                    <span style="--i:0">A</span>
                    <span style="--i:1">m</span>
                    <span style="--i:2">a</span>
                    <span style="--i:3">z</span>
                    <span style="--i:4">i</span>
                    <span style="--i:5">n</span>
                    <span style="--i:6">g</span>
                </span>!
            </h1>
            <div class="grid md:grid-cols-3 gap-8 pb-12 items-center">
                {/* Avatar */}
                <div class="relative group w-64 h-64">
                    <div class="absolute -inset-2 bg-teal-400/20 rounded-full transform group-hover:scale-105 transition-all">
                        <div class="absolute inset-0 bg-gradient-to-br from-teal-400/30 to-transparent rounded-full" />
                    </div>
                    <Image 
                        src={Avatar}
                        alt="Hi there!"
                        class="relative z-5 w-full h-full object-contain"
                    />
                </div>
                {/* Text Content */}
                <div class="col-span-2">
                    <p class="text-lg text-slate-600 mb-8">
                        ðŸ‘‹ I'm always excited to connect with fellow developers and innovators. 
                        Whether you have a project idea, want to collaborate, 
                        or just chat about tech - let's make it happen!
                    </p>
                    <p>
                        <div class="space-y-6">
                            <div class="flex justify-center gap-6">
                                {/* GitHub Link */}
                                <a href="https://github.com/wibrvallejoma" 
                                   target="_blank"
                                   rel="noopener noreferrer"
                                   class="p-6 btn text-white bg-slate-800 rounded-lg hover:bg-slate-700 transition-colors group">
                                   <span class="text-2xl mr-2 font-bold">GitHub</span>
                                    <svg class="w-8 h-8 fill-current group-hover:scale-110 transition-transform" 
                                         viewBox="0 0 24 24">
