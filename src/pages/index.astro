---
import Layout from '../layouts/Layout.astro';
import { Image } from 'astro:assets';
import Avatar from '../images/avatar.png'

import Amazonwebservices from 'simple-icons-astro/Amazonwebservices';
import Vuedotjs from'simple-icons-astro/Vuedotjs';
import Django from'simple-icons-astro/Django';
import React from'simple-icons-astro/React';
import "../styles/global.css";

const title = "William BV - Software Developer";
const description = "Portfolio of William BV - Full Stack Developer & Creative Coder";
---
<Layout title={title} description={description}>
    <section class="min-h-[80vh] flex items-center">
        <div class="container mx-auto px-4 grid md:grid-cols-2 gap-8 items-center">
            <div class="text-left space-y-4">
                <h2 class="text-5xl font-bold">
                    Hey folks!👋<br>
                    This is <strong>Williams V</strong>
                </h2>
                <p class="text-xl text-slate-400">👨‍💻🎮 Full Stack Developer specializing in modern web solutions</p>
            </div>
            
            {/* Character Illustration */}
            <div class="relative max-w-md flex justify-center md:justify-end">
                <div class="relative group w-64 h-64">
                    <div class="absolute -inset-2 bg-teal-400/20 rounded-full transform group-hover:scale-105 transition-all">
                        <div class="absolute inset-0 bg-gradient-to-br from-teal-400/30 to-transparent rounded-full" />
                    </div>
                    <Image 
                        src={Avatar}
                        alt="Hi there!"
                        class="relative z-5 w-full h-full object-contain animate-float -bottom-10 left-5"
                    />
                </div>
            </div>
        </div>
    </section>

    <section id="about" class="py-20">
        <div class="bg-white rounded-xl shadow-lg p-8 mx-auto max-w-4xl">
            <h3 class="text-3xl font-bold mb-8">👨‍💻 About Me</h3>
            <div class="grid md:grid-cols-3 gap-12">
                <div class="space-y-4 col-span-2">
                    <p class="text-slate-400">
                        Passionate full-stack developer with 5+ years of experience building scalable web applications.
                        Specialized in modern JavaScript ecosystems (React / Vue.js, Node.js, Django, TypeScript) and cloud-native solutions (AWS, Docker).
                    </p>
                </div>
                <div class="flex flex-col justify-start align-top">
                    <h4 class="text-xl font-semibold mb-4">💻 Tech Stack</h4>
                    <div class="flex flex-wrap gap-4">
                        <div class="tech-item bg-slate-800 px-4 py-2 rounded-full flex items-center gap-2">
                            <Amazonwebservices class="w-6 h-6 text-amber-400" />
                            <Vuedotjs class="w-6 h-6 text-green-400" />
                            <Django class="w-6 h-6 text-emerald-400" />
                            <React class="w-6 h-6 text-sky-400" />
                        </div>
                        <span class="text-slate-400">Wait! I have more... but I some logos are not allowed 😔</span>
                    </div>
                </div>
            </div>
        </div>
    </section>
    
    <section id="projects" class="py-20">
        <div class="bg-white rounded-xl shadow-lg p-8 mx-auto max-w-4xl">
            <h3 class="text-3xl font-bold mb-8">💾 Featured Projects</h3>
            <div class="grid grid-cols-1 md:grid-cols-2 gap-6">
                <span class="text-2xl text-slate-400">Working on it... 🏗️🚧👷‍♂️</span>
                <!-- <div class="bg-slate-800 p-6 rounded-lg hover:bg-slate-700 transition-colors">
                    <h4 class="text-xl font-bold mb-2">Project 1</h4>
                    <p class="text-slate-400">Description of project 1</p>
                </div> -->
            </div>
        </div>
    </section>
</Layout>

<style>
    @keyframes float {
        0%, 100% { transform: translateY(0); }
        50% { transform: translateY(-20px); }
    }
    .animate-float {
        animation: float 4s ease-in-out infinite;
    }
    .group:hover .animate-float {
        animation: float 2s ease-in-out infinite;
    }

</style>